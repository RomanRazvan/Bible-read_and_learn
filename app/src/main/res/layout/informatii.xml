<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Facerea lumii"
                android:textSize="30sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="239dp"
                android:src="@drawable/geneza" />
            <TextView
                android:id="@+id/textView3"

                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="Dr. Horst Müller - Cartea Geneza și facerea lumii:"
                />

            <TextView
                android:id="@+id/textView4"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:text="https://youtu.be/AK7YwHpv44Q"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>

            <Button
                android:id="@+id/PP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#8AAAE5"
                android:padding="15dp"
                android:text="Patrisrhi și profeți (cap. 2) - Ellen White"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView5"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nașterea lui Isus"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="239dp"
                android:src="@drawable/naterea_domnului" />
            <TextView
                android:id="@+id/textView6"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="Ted Wilson, despre nașterea lui Isus Hristos în Betleem:"
                />
            <TextView
                android:id="@+id/textView12"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:text="https://youtu.be/QFB2nLv2mxs"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="Colinde:"
                />
            <TextView
                android:id="@+id/textView8"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:text="https://youtu.be/vC16AxX6U_M"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/textView9"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:text="https://youtu.be/2hFrUaCZ1Ik"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/textView10"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:text="https://youtu.be/lWHyZo_KyjM"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/textView11"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:text="https://youtu.be/d2xNbEBAbCg"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>
            <Button
                android:id="@+id/VI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#8AAAE5"
                android:padding="15dp"
                android:text="Viața lui Isus (cap. Nașterea lui Hristos) - Ellen White"
                android:textColor="#000000" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>